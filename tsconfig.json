{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": false,
    "sourceMap": false,
    "removeComments": true
  },
  "include": [
    "models/**/*.ts",
    "controllers/**/*.ts",
    "services/**/*.ts",
    "routes/**/*.ts",
    "types/**/*.ts",
    "server.ts",
    "database.ts",
    "index.ts"
  ]
}
